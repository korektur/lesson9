<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" android:layout_gravity="left|center_vertical">
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="City"
                android:id="@+id/editText" android:layout_gravity="left|center_vertical" android:layout_weight="3"
                android:inputType="text"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Find"
                android:id="@+id/findbutton" android:layout_gravity="center" android:layout_weight="1"/>
    </LinearLayout>
    <ListView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/listView"/>
</LinearLayout>